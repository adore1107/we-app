page {
  background-color: #f5f5f5;
}

.about-page {
  padding: 20rpx;
}

/* ① 顶部：品牌定位 */
.brand-header {
  background: linear-gradient(135deg, #2c5f2d 0%, #4a7c59 100%);
  color: white;
  padding: 60rpx 40rpx;
  border-radius: 16rpx;
  text-align: center;
  margin-bottom: 30rpx;
}

.brand-title {
  font-size: 42rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.brand-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* ② 三个图标卡片 */
.stats-scroll {
  white-space: nowrap;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}

.stats-card {
  display: inline-block;
  background: white;
  width: 280rpx;
  height: 200rpx;
  margin: 0 10rpx;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  vertical-align: top;
}

.stats-icon {
  font-size: 48rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
}

.stats-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stats-data {
  font-size: 28rpx;
  font-weight: bold;
  color: #2c5f2d;
}

/* ③ 核心系列折叠面板 */
.core-series {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #2c5f2d;
}

.product-detail {
  padding: 20rpx 0;
}

.product-feature {
  font-size: 26rpx;
  color: #2c5f2d;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.product-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

/* ④ 客户背书logo墙 */
.client-wall {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.logo-scroll {
  white-space: nowrap;
}

.logo-item {
  display: inline-block;
  width: 180rpx;
  height: 100rpx;
  margin: 0 15rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  text-align: center;
  line-height: 100rpx;
  filter: grayscale(100%);
  opacity: 0.7;
}

.logo-text {
  font-size: 24rpx;
  color: #666;
}

/* ⑤ 联系方式 */
.contact-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.contact-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  background: none;
  border: none;
  text-align: left;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-icon {
  font-size: 40rpx;
  margin-right: 30rpx;
  width: 60rpx;
}

.contact-info {
  flex: 1;
}

.contact-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: bold;
}

.contact-value {
  font-size: 24rpx;
  color: #2c5f2d;
}

.contact-action {
  font-size: 24rpx;
  color: #999;
}

/* ⑥ 底部情感句 */
.emotional-footer {
  background: white;
  border-radius: 12rpx;
  padding: 40rpx 30rpx;
  text-align: center;
  margin-bottom: 40rpx;
  margin-top: 30rpx;
}

.slogan {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.follow-tip {
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
  padding-bottom: env(safe-area-inset-bottom);
  margin-bottom: calc(40rpx + env(safe-area-inset-bottom));
}