/* ========== 淘宝风格分类页面 ========== */

/* 页面容器 */
.category-page {
  height: 100vh;
  background: #F5F5F5;
}

/* ========== 顶部搜索栏 ========== */
.search-header {
  background: #FFFFFF;
  padding: 16rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.search-bar {
  background: #F5F5F5;
  border-radius: 50rpx;
  padding: 18rpx 28rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s ease;
}

.search-bar:active {
  background: #EEEEEE;
  transform: scale(0.99);
}

.search-icon {
  font-size: 30rpx;
  margin-right: 16rpx;
  color: #999;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
  flex: 1;
}

/* ========== 一级分类标签区（固定顶部） ========== */
.main-category-tabs-fixed {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  padding-bottom: 16rpx;
  margin-bottom: 8rpx;
}

/* ========== 二级分类标签区（固定在一级分类下方） ========== */
.sub-category-tabs-fixed {
  position: fixed;
  top: 142rpx;  /* 一级分类的高度 + 间距 */
  left: 0;
  right: 0;
  z-index: 99;
  background: #FFFFFF;
  border-bottom: 1rpx solid #E5E5E5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  padding: 20rpx 0;
}

.sub-category-tabs {
  background: #FFFFFF;
  white-space: nowrap;
}

.category-tabs {
  background: #FFFFFF;
  white-space: nowrap;
  border-bottom: 1rpx solid #F0F0F0;
}

.tabs-container {
  display: inline-flex;
  padding: 0 12rpx;
}

.tab-item {
  position: relative;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx 24rpx;
  min-width: 120rpx;
  transition: all 0.3s ease;
}

.tab-item:active {
  transform: scale(0.95);
}

.tab-icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
  transition: transform 0.3s ease;
}

.tab-item.active .tab-icon {
  transform: scale(1.1);
}

.tab-name {
  font-size: 26rpx;
  color: #666;
  font-weight: 400;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.tab-item.active .tab-name {
  color: #FF6B35;
  font-weight: 600;
}

/* 选中指示器 */
.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #FF6B35 0%, #FF8C5A 100%);
  border-radius: 3rpx;
  animation: slideIn 0.3s ease;
}

@keyframes slideIn {
  from {
    width: 0;
    opacity: 0;
  }
  to {
    width: 40rpx;
    opacity: 1;
  }
}

/* ========== 二级分类标签项 ========== */
.sub-tab-item {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 32rpx;
  margin: 0 12rpx;
  transition: all 0.3s ease;
  border-radius: 40rpx;
  background: #F5F5F5;
}

.sub-tab-item:active {
  transform: scale(0.96);
}

.sub-tab-name {
  font-size: 28rpx;
  color: #666;
  font-weight: 400;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.sub-tab-item.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C5A 100%);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.25);
}

.sub-tab-item.active .sub-tab-name {
  color: #FFFFFF;
  font-weight: 600;
}

/* ========== 商品展示区 ========== */
.products-scroll {
  position: absolute;
  top: 246rpx;  /* 一级分类142rpx + 二级分类104rpx */
  left: 0;
  right: 0;
  bottom: 0;
  background: #F5F5F5;
}

/* 商品网格 - 两列瀑布流 */
.products-grid {
  padding: 20rpx 20rpx 100rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

/* 商品卡片 */
.product-card {
  width: 345rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.product-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

/* 商品图片 */
.product-image-wrapper {
  position: relative;
  width: 100%;
  height: 345rpx;
  background: #F8F8F8;
  overflow: hidden;
}

.product-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: brightness(1.02) contrast(1.02) saturate(0.85);
  transition: transform 0.3s ease;
}

.product-card:active .product-image {
  transform: scale(1.05);
}

/* 商品信息 */
.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  min-height: 78rpx;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 40rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  margin: 40rpx 20rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  font-weight: 400;
}

/* ========== 加载更多 ========== */
.load-more {
  padding: 40rpx;
  text-align: center;
}

.load-more-text {
  font-size: 24rpx;
  color: #999;
}

/* ========== 回到顶部按钮 ========== */
.back-to-top {
  position: fixed;
  bottom: 160rpx;
  right: 32rpx;
  width: 96rpx;
  height: 96rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transform: scale(0.8);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.back-to-top.show {
  opacity: 1;
  visibility: visible;
  transform: scale(1);
}

.back-to-top:active {
  transform: scale(0.95);
  background: rgba(0, 0, 0, 0.8);
}

.back-to-top-text {
  font-size: 20rpx;
  color: #fff;
  margin-top: 4rpx;
  font-weight: 500;
}

/* ========== 页面基础设置 ========== */
page {
  height: 100vh;
  background: #F5F5F5;
}
