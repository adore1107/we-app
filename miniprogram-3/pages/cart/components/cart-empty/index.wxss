.cart-empty {
  padding: 64rpx 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
  height: calc(100vh - 100rpx);
  background-color: #f5f5f5;
}
.cart-empty .cart-img {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(0, 82, 217, 0.1);
}

.cart-empty .heart-icon {
  font-size: 80rpx;
  color: #0052d9;
  opacity: 0.6;
  line-height: 1;
}

.cart-empty .tip {
  font-size: 30rpx;
  line-height: 42rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.cart-empty .sub-tip {
  font-size: 24rpx;
  line-height: 34rpx;
  color: #999;
  margin-bottom: 32rpx;
  text-align: center;
  padding: 0 32rpx;
}
.cart-empty .btn {
  width: 240rpx;
  height: 72rpx;
  border-radius: 36rpx;
  text-align: center;
  line-height: 72rpx;
  border: 2rpx solid #0052d9;
  color: #0052d9;
  background-color: transparent;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}

.cart-empty .btn:active {
  background-color: #0052d9;
  color: #fff;
}
