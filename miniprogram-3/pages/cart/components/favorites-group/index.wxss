.favorites-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx; /* 为底部批量操作栏留出空间 */
}

/* 顶部操作栏 */
.favorites-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.header-left {
  flex: 1;
}

.favorites-count {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.header-right {
  display: flex;
  align-items: center;
}

.edit-btn,
.cancel-btn {
  padding: 12rpx 32rpx;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
  background: none;
}

.edit-btn::after,
.cancel-btn::after {
  border: none;
}

.edit-btn {
  color: #0052d9;
  background-color: #e8f0fe;
}

.edit-btn:active {
  background-color: #d4e2ff;
}

.cancel-btn {
  color: #666;
  background-color: #f5f5f5;
}

.cancel-btn:active {
  background-color: #e8e8e8;
}

.favorites-list {
  padding: 24rpx;
}

/* 左滑容器 */
.favorites-item-wrapper {
  position: relative;
  overflow: hidden;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
}

.favorites-item {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 2;
}

/* 商品图片 */
.goods-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
  margin-right: 20rpx;
  background-color: #f8f8f8;
}

.goods-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8rpx;
}

/* 商品信息 */
.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-height: 180rpx;
  position: relative;
}

.goods-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  line-height: 40rpx;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  word-break: break-all;
}

/* 商品规格和单位 */
.goods-specs {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
}

.specs-text {
  font-size: 22rpx;
  color: #666;
  background-color: #f0f0f0;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  margin-bottom: 6rpx;
}

.unit-text {
  font-size: 22rpx;
  color: #999;
  background-color: #f8f8f8;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

/* 供应商信息 */
.supplier-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.supplier-name {
  font-size: 24rpx;
  color: #0052d9;
  font-weight: 500;
}

.favorite-time {
  font-size: 20rpx;
  color: #999;
}

/* 价格信息 */
.price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: auto;
  padding-top: 8rpx;
}

.wholesale-price {
  display: flex;
  align-items: baseline;
}

.price-label {
  font-size: 22rpx;
  color: #666;
  margin-right: 6rpx;
}

.price-value {
  font-size: 30rpx;
  color: #ff4d4f;
  font-weight: 600;
}

.min-order {
  display: flex;
  align-items: baseline;
  background-color: #fff2e8;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.order-label {
  font-size: 22rpx;
  color: #ff7a45;
  margin-right: 6rpx;
}

.order-value {
  font-size: 24rpx;
  color: #ff7a45;
  font-weight: 500;
}

/* 右侧滑出删除区域 */
.swipe-delete-area {
  position: absolute;
  top: 0;
  right: 0;
  width: 160rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

/* 删除按钮 */
.delete-btn {
  width: 160rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff4757 100%);
  border-radius: 0 12rpx 12rpx 0;
  transition: all 0.3s ease;
}

.delete-btn:active {
  background: linear-gradient(135deg, #ff5252 0%, #ff3838 100%);
}

.delete-text {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* ========== 批量管理相关样式 ========== */

/* 复选框容器 */
.checkbox-wrapper {
  display: flex;
  align-items: center;
  padding-right: 20rpx;
  flex-shrink: 0;
}

/* 复选框 */
.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #d9d9d9;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  background-color: #fff;
}

.checkbox.checked {
  background: linear-gradient(135deg, #0052d9 0%, #0040b0 100%);
  border-color: #0052d9;
}

.checkbox-icon {
  color: #fff;
  font-size: 24rpx;
  font-weight: bold;
  line-height: 1;
}

/* 编辑模式下的商品卡片调整 */
.favorites-item.edit-mode {
  padding-left: 0;
}

/* 底部批量操作栏 */
.batch-actions-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0, 0, 0, 0.08);
  z-index: 1001; /* 提高 z-index，确保在 inquiry-bar 上面 */
  /* 安全区域适配 */
  padding-bottom: calc(constant(safe-area-inset-bottom));
  padding-bottom: calc(env(safe-area-inset-bottom));
}

/* 全选区域 */
.select-all {
  display: flex;
  align-items: center;
  cursor: pointer;
}

.select-all-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 16rpx;
  font-weight: 500;
}

/* 批量删除按钮 */
.batch-delete-btn {
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff4757 100%);
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 77, 79, 0.3);
  transition: all 0.3s ease;
}

.batch-delete-btn::after {
  border: none;
}

.batch-delete-btn:active {
  background: linear-gradient(135deg, #ff5252 0%, #ff3838 100%);
  transform: scale(0.98);
}

.batch-delete-btn[disabled] {
  background: linear-gradient(135deg, #d9d9d9 0%, #bfbfbf 100%);
  color: #999;
  box-shadow: none;
  opacity: 0.6;
}